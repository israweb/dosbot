# =============================================================================
# CRYPTO TRADING BOT - ENVIRONMENT CONFIGURATION TEMPLATE
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env file to version control!

# =============================================================================
# BASIC CONFIGURATION
# =============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Debug mode (true/false)
DEBUG_MODE=false

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path
LOG_FILE=logs/trading.log

# =============================================================================
# EXCHANGE API CONFIGURATION
# =============================================================================

# Binance API credentials (REQUIRED for production)
# Get these from: https://www.binance.com/en/my/settings/api-management
API_KEY=your_binance_api_key_here
API_SECRET=your_binance_api_secret_here

# API Base URL
# Production: https://api.binance.com
# Testnet: https://testnet.binance.vision
BASE_URL=https://testnet.binance.vision

# API request timeout (seconds)
API_TIMEOUT=30

# Maximum number of API retry attempts
MAX_RETRIES=3

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================

# Trading pair symbol
SYMBOL=BTCUSDT

# Chart timeframe (1m, 5m, 15m, 30m, 1h, 4h, 1d)
TIMEFRAME=1h

# Maximum position size in quote currency (USDT)
MAX_POSITION_SIZE=100

# Stop loss percentage (0-100)
STOP_LOSS_PERCENT=2.0

# Take profit percentage (0-100)
TAKE_PROFIT_PERCENT=5.0

# Minimum order size in quote currency
MIN_ORDER_SIZE=10

# Trading interval in seconds
TRADING_INTERVAL=60

# =============================================================================
# MACHINE LEARNING CONFIGURATION
# =============================================================================

# Model update interval in seconds
MODEL_UPDATE_INTERVAL=3600

# Feature window size for ML model
FEATURE_WINDOW=100

# Prediction confidence threshold (0-1)
PREDICTION_THRESHOLD=0.7

# Path to saved ML model
MODEL_PATH=models/zigzag_model.pkl

# Training configuration
TRAINING_EPOCHS=100
BATCH_SIZE=32
LEARNING_RATE=0.001

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL database URL
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://user:password@localhost:5432/crypto_trading

# Redis URL for caching and session storage
REDIS_URL=redis://localhost:6379/0

# Database connection pool settings
DB_POOL_SIZE=10
DB_TIMEOUT=30

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT secret key for token authentication (generate with: openssl rand -hex 32)
JWT_SECRET=your_jwt_secret_key_here

# Encryption key for sensitive data (generate with: openssl rand -hex 32)
ENCRYPTION_KEY=your_encryption_key_here

# JWT token expiration time in seconds
JWT_EXPIRATION=3600

# Enable HTTPS (true/false)
ENABLE_HTTPS=false

# =============================================================================
# MONITORING AND METRICS
# =============================================================================

# Prometheus metrics port
PROMETHEUS_PORT=9090

# Grafana dashboard port
GRAFANA_PORT=3000

# Metrics collection interval in seconds
METRICS_INTERVAL=60

# Enable detailed metrics collection (true/false)
DETAILED_METRICS=false

# =============================================================================
# NOTIFICATIONS
# =============================================================================

# Telegram Bot Configuration
# Create bot: https://t.me/BotFather
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Email Notifications (SMTP)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here

# Webhook for custom notifications
WEBHOOK_URL=https://your-webhook-url.com/notifications

# =============================================================================
# DOCKER AND DEPLOYMENT
# =============================================================================

# Docker Hub credentials (for CI/CD)
DOCKER_USERNAME=your_dockerhub_username
DOCKER_PASSWORD=your_dockerhub_password

# Container registry
CONTAINER_REGISTRY=docker.io

# =============================================================================
# CLOUD PROVIDER CREDENTIALS
# =============================================================================

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# Azure Configuration
AZURE_CLIENT_ID=your_azure_client_id
AZURE_CLIENT_SECRET=your_azure_client_secret
AZURE_TENANT_ID=your_azure_tenant_id

# =============================================================================
# ADDITIONAL SETTINGS
# =============================================================================

# Timezone
TIMEZONE=UTC

# Maximum number of worker processes
MAX_WORKERS=4

# Data directories
DATA_DIR=data/
PROCESSED_DATA_DIR=processed_data/

# Log rotation settings
MAX_LOG_SIZE=100
LOG_BACKUP_COUNT=5

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable development features (true/false)
DEV_MODE=true

# Hot reload for development (true/false)
HOT_RELOAD=true

# Mock API responses for testing (true/false)
MOCK_API=false

# Test database URL (for running tests)
TEST_DATABASE_URL=sqlite:///./test.db

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# Connection pool settings
CONNECTION_POOL_SIZE=20
CONNECTION_POOL_TIMEOUT=30

# Cache settings
CACHE_TTL=300
CACHE_MAX_SIZE=1000

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable specific features (true/false)
ENABLE_PAPER_TRADING=true
ENABLE_BACKTESTING=true
ENABLE_LIVE_TRADING=false
ENABLE_TELEGRAM_NOTIFICATIONS=false
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_WEBHOOK_NOTIFICATIONS=false

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Third-party API keys
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key
COINGECKO_API_KEY=your_coingecko_api_key

# News API for sentiment analysis
NEWS_API_KEY=your_news_api_key

# Social media APIs
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret
